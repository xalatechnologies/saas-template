#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit quality checks..."

# Run TypeScript type checking
echo "ğŸ“ Checking TypeScript types..."
npx tsc --noEmit
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript type checking failed!"
  exit 1
fi

# Run ESLint
echo "ğŸ”§ Running ESLint..."
npx eslint . --ext .ts,.tsx,.js,.jsx --max-warnings 0
if [ $? -ne 0 ]; then
  echo "âŒ ESLint failed!"
  exit 1
fi

# Run Prettier check
echo "ğŸ’… Checking code formatting..."
npx prettier --check .
if [ $? -ne 0 ]; then
  echo "âŒ Code formatting check failed! Run 'npm run format' to fix."
  exit 1
fi

# Run custom validation scripts
echo "ğŸ¨ Validating design tokens..."
node scripts/validate-design-tokens.js
if [ $? -ne 0 ]; then
  echo "âŒ Design token validation failed!"
  exit 1
fi

echo "ğŸ“ Checking file sizes..."
node scripts/check-file-size.js
if [ $? -ne 0 ]; then
  echo "âŒ File size validation failed!"
  exit 1
fi

echo "ğŸ§© Validating component purity..."
node scripts/validate-component-purity.js
if [ $? -ne 0 ]; then
  echo "âŒ Component purity validation failed!"
  exit 1
fi

echo "ğŸ—ï¸ Validating architecture..."
node scripts/validate-architecture.js
if [ $? -ne 0 ]; then
  echo "âŒ Architecture validation failed!"
  exit 1
fi

echo "âœ… All pre-commit checks passed!"